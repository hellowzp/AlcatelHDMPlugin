<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <category
      		name="Alcatel-Lucent Bell HDM Development"
      		id="al.hdm.jsWizard">
  	  </category>
      <wizard
            name="HDM Custom Function Project"
            icon="icons/logo.png"
            category="al.hdm.jsWizard"
            class="ui.CustomFunctionWizard"
            id="al.hdm.ui.CustomFunctionWizard">
      </wizard>
   </extension> 
      
   <extension
            point="org.eclipse.wst.jsdt.core.JsGlobalScopeContainerInitializer">
        <JsGlobalScopeContainerInitializer
        	id="al.hdm.sharedlibrary"
        	class="ui.HDMSharedLibraryInitializer"/>
   </extension>
   
