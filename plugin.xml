   <extension
         point="org.eclipse.ui.commands">
      <category
            id="al.hdm.commands.category"
            name="Zip">
      </category>
      <command
            categoryId="al.hdm.commands.category"
            id="al.hdm.commands.zipCommand"
            name="Zip custom function">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="handlers.ZipHandler"
            commandId="al.hdm.commands.zipCommand">
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="al.hdm.commands.zipCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">  <!-- Ctrl + 6 -->
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="al.hdm.menus.zipCommandMenu"
               label="Zip"
               mnemonic="M">
            <command
                  commandId="al.hdm.commands.zipCommand"
                  id="al.hdm.menus.zipCommandMenu"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="al.hdm.toolbars.zipToolbar">
            <command
                  commandId="al.hdm.commands.zipCommand"
                  icon="icons/logo.png"
                  id="al.hdm.toolbars.zipCommandToolbar"
                  tooltip="Zip JavaScript and xml custom function files">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
